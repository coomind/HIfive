    <script>
        let hasVoted = false;
        let agreeCount = 4842;
        let disagreeCount = 5033;
        let userVoteType = '';
        let commentCounter = 4; // 기존 댓글이 3개이므로 다음은 4번부터

        document.getElementById('agreeBtn').addEventListener('click', function(e) {
            e.preventDefault();
            if (hasVoted) {
                alert('이미 투표하였습니다.');
                return;
            }
            
            agreeCount++;
            hasVoted = true;
            userVoteType = 'agree';
            updateVoteCounts();
            alert('찬성 투표가 완료되었습니다.');
        });

        document.getElementById('disagreeBtn').addEventListener('click', function(e) {
            e.preventDefault();
            if (hasVoted) {
                alert('이미 투표하였습니다.');
                return;
            }
            
            disagreeCount++;
            hasVoted = true;
            userVoteType = 'disagree';
            updateVoteCounts();
            alert('반대 투표가 완료되었습니다.');
        });

        function updateVoteCounts() {
            document.querySelector('#agreeBtn .vote-count').textContent = agreeCount;
            document.querySelector('#disagreeBtn .vote-count').textContent = disagreeCount;
            document.querySelector('.vote-total').textContent = `총원수 : ${agreeCount + disagreeCount}`;
        }

        document.getElementById('submitComment').addEventListener('click', function() {
            const commentInput = document.querySelector('.comment-input');
            const commentText = commentInput.value.trim();
            
            if (!commentText) {
                alert('댓글을 입력해주세요.');
                return;
            }

            if (!hasVoted) {
                alert('투표를 먼저 해주세요.');
                return;
            }

            const voteText = userVoteType === 'agree' ? '찬성' : '반대';
            const voteClass = userVoteType === 'agree' ? 'agree' : 'disagree';

            const newComment = document.createElement('div');
            newComment.className = 'comment-item';
            newComment.innerHTML = `
                <div class="comment-header">
                    <div class="comment-avatar">👤</div>
                    <span class="comment-author">익명${commentCounter} - ${voteText}</span>
                    <span class="comment-date">방금전</span>
                </div>
                <div class="comment-content">${commentText}</div>
                <div class="comment-actions">
                    <a href="#" class="comment-action">좋아요 · 0</a>
                    <a href="#" class="comment-action">답글</a>
                </div>
            `;

            const commentsSection = document.querySelector('.comments-section');
            const firstComment = commentsSection.querySelector('.comment-item');
            commentsSection.insertBefore(newComment, firstComment);

            commentCounter++; // 댓글 번호 증가
            commentInput.value = '';
            alert('댓글이 작성되었습니다.');
        });

        document.querySelector('.comment-input').addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && e.ctrlKey) {
                document.getElementById('submitComment').click();
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('입법제안 상세보기 페이지 로드 완료');
        });
    </script>
</body>
