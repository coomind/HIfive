                    BILL_NO: '2024008',
                    BILL_NAME: '지방자치법 일부개정법률안',
                    PROPOSE_DT: '2024-03-05',
                    RST_PROPOSER: '강○○의원 등 14인',
                    COMMITTEE: '행정안전위원회'
                }
