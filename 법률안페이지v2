        // 현재 상태
        let currentPage = 1;
        let currentCommittee = '';
        let currentSearchTerm = '';
        let isLoading = false;

        // 모의 API 호출 함수
        async function fetchBills(params = {}) {
            // 로딩 시뮬레이션
            await new Promise(resolve => setTimeout(resolve, 800));
            
            let filteredBills = [...MOCK_DATA.bills];
            
            // 위원회 필터링
            if (params.committee && params.committee !== '') {
                filteredBills = filteredBills.filter(bill => 
                    bill.COMMITTEE.includes(params.committee)
                );
            }
            
            // 검색어 필터링
            if (params.searchTerm) {
                filteredBills = filteredBills.filter(bill =>
                    bill.BILL_NAME.toLowerCase().includes(params.searchTerm.toLowerCase()) ||
                    bill.RST_PROPOSER.toLowerCase().includes(params.searchTerm.toLowerCase())
                );
            }
            
            // 페이지네이션
            const pageSize = 5;
            const startIndex = (params.page - 1) * pageSize;
            const endIndex = startIndex + pageSize;
            const paginatedBills = filteredBills.slice(startIndex, endIndex);
            
            return {
                bills: paginatedBills,
                totalCount: filteredBills.length
            };
        }

        // 테이블 업데이트 함수
        function updateTable(bills) {
            const billsSection = document.querySelector('.bills-section');
            
            let tableHTML = `
                <div class="table-header">
                    <div>의안번호</div>
                    <div>의안명</div>
                    <div>제안일자</div>
                    <div>제안자</div>
                    <div>상임위원회</div>
                </div>
            `;

            if (bills && bills.length > 0) {
                bills.forEach(bill => {
                    const billNo = bill.BILL_NO || '-';
                    const billName = bill.BILL_NAME || '-';
                    const proposeDate = bill.PROPOSE_DT ? bill.PROPOSE_DT : '-';
                    const proposer = bill.RST_PROPOSER || bill.PROPOSER || '-';
                    const committee = bill.COMMITTEE || '-';
                    
                    tableHTML += `
                        <a href="#" class="table-row" data-bill-id="${bill.BILL_ID}">
                            <div class="bill-number">${billNo}</div>
                            <div class="bill-title">${billName}</div>
                            <div class="bill-date">${proposeDate}</div>
                            <div class="bill-court">${proposer}</div>
                            <div class="bill-status">${committee}</div>
                        </a>
                    `;
                });
            } else {
                tableHTML += `
                    <div class="no-results">
                        검색 결과가 없습니다.
                    </div>
                `;
            }

            billsSection.innerHTML = tableHTML;

            // 새로 생성된 행들에 이벤트 리스너 추가
            document.querySelectorAll('.table-row').forEach(row => {
                row.addEventListener('click', function(e) {
                    e.preventDefault();
                    const billId = this.getAttribute('data-bill-id');
                    const billTitle = this.querySelector('.bill-title').textContent;
                    alert(`법률안 상세보기: ${billId} - ${billTitle}`);
                });
            });
        }

        // 페이지네이션 업데이트 함수
        function updatePagination(totalCount) {
            const pageSize = 5;
            const totalPages = Math.ceil(totalCount / pageSize);
            const pagination = document.getElementById('pagination');
            
            if (totalPages <= 1) {
                pagination.innerHTML = '';
                return;
            }
            
            let paginationHTML = '';
            
            // 이전 버튼
            const prevDisabled = currentPage === 1 ? 'disabled' : '';
            paginationHTML += `<button class="page-btn ${prevDisabled}" data-page="${currentPage - 1}">‹</button>`;
            
            // 페이지 번호들
            const startPage = Math.max(1, currentPage - 2);
            const endPage = Math.min(totalPages, startPage + 4);
            
            for (let i = startPage; i <= endPage; i++) {
                const activeClass = i === currentPage ? 'active' : '';
                paginationHTML += `<button class="page-btn ${activeClass}" data-page="${i}">${i}</button>`;
            }
            
            // 다음 버튼
            const nextDisabled = currentPage === totalPages ? 'disabled' : '';
            paginationHTML += `<button class="page-btn ${nextDisabled}" data-page="${currentPage + 1}">›</button>`;
            
            pagination.innerHTML = paginationHTML;

            // 페이지네이션 이벤트 리스너 추가
            document.querySelectorAll('.page-btn:not(.disabled)').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const page = parseInt(this.getAttribute('data-page'));
                    if (page !== currentPage && page >= 1) {
                        currentPage = page;
                        loadCurrentData();
                    }
                });
            });
        }

        // 상태 바 업데이트
        function updateStatusBar(totalCount) {
            const resultsCount = document.getElementById('resultsCount');
            const currentFilter = document.getElementById('currentFilter');
            
            resultsCount.textContent = `총 ${totalCount}건의 법률안`;
            
            let filterText = '';
            if (currentCommittee) {
                filterText += `위원회: ${currentCommittee}`;
            }
            if (currentSearchTerm) {
                if (filterText) filterText += ' | ';
                filterText += `검색어: "${currentSearchTerm}"`;
            }
            
            currentFilter.textContent = filterText;
        }

        // 현재 상태에 맞는 데이터 로드
        async function loadCurrentData() {
            if (isLoading) return;
            
            isLoading = true;
            showLoading();
            
            try {
                const result = await fetchBills({
                    committee: currentCommittee,
                    searchTerm: currentSearchTerm,
                    page: currentPage
                });
                
                updateTable(result.bills);
                updatePagination(result.totalCount);
                updateStatusBar(result.totalCount);
            } catch (error) {
                console.error('데이터 로드 오류:', error);
                showError();
            } finally {
                isLoading = false;
            }
        }

        // 로딩 표시
        function showLoading() {
            const billsSection = document.querySelector('.bills-section');
            billsSection.innerHTML = `
                <div class="table-header">
                    <div>의안번호</div>
                    <div>의안명</div>
                    <div>제안일자</div>
                    <div>제안자</div>
                    <div>상임위원회</div>
                </div>
                <div class="loading-container">
                    <div class="loading-spinner"></div>
                    데이터를 불러오는 중입니다...
                </div>
            `;
        }

        // 오류 표시
        function showError() {
            const billsSection = document.querySelector('.bills-section');
            billsSection.innerHTML = `
                <div class="table-header">
                    <div>의안번호</div>
                    <div>의안명</div>
                    <div>제안일자</div>
                    <div>제안자</div>
                    <div>상임위원회</div>
                </div>
                <div class="no-results">
                    데이터를 불러오는 중 오류가 발생했습니다.<br>
                    잠시 후 다시 시도해주세요.
                </div>
            `;
        }

        // 위원회 카테고리 클릭 이벤트
        document.querySelectorAll('.committee-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                // 모든 active 클래스 제거
                document.querySelectorAll('.committee-item').forEach(el => {
                    el.classList.remove('active');
                });
                
                // 클릭된 항목에 active 클래스 추가
                this.classList.add('active');
                
                // 해당 위원회의 법률안 로드
                currentCommittee = this.getAttribute('data-committee');
                currentPage = 1;
                currentSearchTerm = '';
                document.querySelector('.search-input').value = '';
                
                loadCurrentData();
            });
        });

        // 검색 기능
        const searchInput = document.querySelector('.search-input');
        const searchBtn = document.querySelector('.search-btn');

        // 검색 버튼 클릭 이벤트
        searchBtn.addEventListener('click', function() {
            const searchTerm = searchInput.value.trim();
            performSearch(searchTerm);
        });

        // 엔터키로 검색
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const searchTerm = this.value.trim();
                performSearch(searchTerm);
            }
        });

        // 검색 실행 함수
        function performSearch(searchTerm) {
            currentSearchTerm = searchTerm;
            currentPage = 1;
            
            // 위원회 선택 유지하면서 검색
            loadCurrentData();
        }

        // 초기 로드
        document.addEventListener('DOMContentLoaded', function() {
            // 전체 버튼을 기본 활성화
            const allButton = document.querySelector('.committee-item[data-committee=""]');
            if (allButton) {
                allButton.classList.add('active');
                loadCurrentData();
            }
        });
    </script>
</body>
</html>
